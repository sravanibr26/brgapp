<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bingerdranch.android.brgapp.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_imagesFragment"
            app:destination="@id/imagesFragment" />

        <action
            android:id="@+id/action_homeFragment_to_contactFragment"
            app:destination="@id/contactFragment" />

        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />

        <action
        android:id="@+id/action_homeFragment_to_bookingFragment"
        app:destination="@id/bookingFragment" />

    </fragment>

    <fragment
        android:id="@+id/imagesFragment"
        android:name="com.bingerdranch.android.brgapp.ImagesFragment"
        android:label="Images"
        tools:layout="@layout/fragment_images">

        <action
            android:id="@+id/action_imagesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_imagesFragment_to_contactFragment"
            app:destination="@id/contactFragment" />

        <action
            android:id="@+id/action_imagesFragment_to_bookingFragment"
            app:destination="@id/bookingFragment" />

        <action
            android:id="@+id/action_imagesFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />

    </fragment>

    <fragment
        android:id="@+id/contactFragment"
        android:name="com.bingerdranch.android.brgapp.ContactFragment"
        android:label="Contact"
        tools:layout="@layout/fragment_contact" >

        <action
            android:id="@+id/action_contactFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_contactFragment_to_imagesFragment"
            app:destination="@id/imagesFragment" />

        <action
            android:id="@+id/action_contactFragment_to_bookingFragment"
            app:destination="@id/bookingFragment" />

        <action
            android:id="@+id/action_contactFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />

    </fragment>

    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.bingerdranch.android.brgapp.BookingFragment"
        android:label="Book"
        tools:layout="@layout/fragment_booking">

        <action
            android:id="@+id/action_bookingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_bookingFragment_to_contactFragment"
            app:destination="@id/contactFragment" />

        <action
            android:id="@+id/action_bookingFragment_to_imagesFragment"
            app:destination="@id/imagesFragment" />

        <action
            android:id="@+id/action_bookingFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />

    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.bingerdranch.android.brgapp.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about">

        <action
            android:id="@+id/action_aboutFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_aboutFragment_to_contactFragment"
            app:destination="@id/contactFragment" />

        <action
            android:id="@+id/action_aboutFragment_to_bookingFragment"
            app:destination="@id/bookingFragment" />

        <action
            android:id="@+id/action_aboutFragment_to_imagesFragment"
            app:destination="@id/imagesFragment" />

    </fragment>


</navigation>